<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".girisActivity">

    <ImageView
        android:id="@+id/konumlarim"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="85dp"
        android:layout_marginBottom="13dp"
        app:layout_constraintBottom_toTopOf="@+id/anasayfa"
        app:layout_constraintEnd_toEndOf="@+id/anasayfa"
        app:layout_constraintStart_toStartOf="@+id/anasayfa"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/konumlarim" />

    <ImageView
        android:id="@+id/anasayfa"
        android:layout_width="290dp"
        android:layout_height="0dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@+id/fotografekle"
        app:layout_constraintEnd_toEndOf="@+id/fotografekle"
        app:layout_constraintTop_toBottomOf="@+id/konumlarim"
        app:srcCompat="@drawable/anasayfa" />

    <ImageView
        android:id="@+id/fotografekle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="129dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/anasayfa"
        app:srcCompat="@drawable/foto" />
</androidx.constraintlayout.widget.ConstraintLayout>